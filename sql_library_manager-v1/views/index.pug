extends layout

block content
  h1 Books
  p Welcome to #{title}

    a.button(href="/books/new") Create New Book
   
    table 
      tr 
       th Title
       th Author 
       th Genre
       th Year

    tbody
    each book in books
      tr 
        td 
         a(href=`/books/${book.id}`) #{book.title}   

         td #{book.author}
         td #{book.genre}
         td #{book.year}